@import "weui-grid.wxss";
textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  font-size: 30rpx;
  color: black;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.image_class{
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
}
.image_class image{
  display: flex;
  padding-left: 10rpx;
  padding-top: 10rpx;
  height: 320rpx;
  width: 50%;
}
.categories{
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
.plus{
  width: 180rpx;
  height: 180rpx;
  display: justify-content;
}